<%- include('partials/header') %>

<div class="flex flex-col md:flex-row min-h-screen bg-transparent text-white mt-20 md:px-12">
  <!-- Background grid pattern -->
  <svg class="absolute inset-0 -z-10 h-full w-full stroke-white/5 [mask-image:radial-gradient(75%_50%_at_top_center,white,transparent)]" aria-hidden="true">
    <defs>
      <pattern id="hero" width="80" height="80" x="50%" y="-1" patternUnits="userSpaceOnUse">
        <path d="M.5 200V.5H200" fill="none"></path>
      </pattern>
    </defs>
    <rect width="100%" height="100%" stroke-width="0" fill="url(#hero)"></rect>
  </svg>

  <!-- Sidebar -->
  <div class="w-full md:w-1/4 p-4 border-b md:border-b-0 md:border-r border-gray-700">
    <h2 class="text-xl font-semibold mb-6">Account Center</h2>
    <ul>
      <li class="mb-4">
        <button onclick="showSection('details')" class="flex items-center text-gray-300 hover:text-white">
          <i class="fas fa-user mr-2"></i> Personal Details
        </button>
      </li>
      <li>
        <button onclick="showSection('courses')" class="flex items-center text-gray-300 hover:text-white">
          <i class="fas fa-book mr-2"></i> Enrolled Courses
        </button>
      </li>
      <li>
        <button class="mt-8 px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-500 w-full sm:w-auto"><a href="/logout">
          Logout </a> <i class="fas fa-sign-out-alt ml-2"></i>
        </button>
      </li>
    </ul>
  </div>

  <!-- Profile Details and Courses Section -->
  <div class="flex-1 p-4 md:p-8">
    <!-- Profile Details Section -->
    <div id="details" class="section active">
      <div class="flex flex-col sm:flex-row items-center mb-8">
        <div class="relative">
          <img class="w-24 h-24 rounded-full" src="/images/beams.jpg" alt="Profile Picture">
          <button class="absolute bottom-0 right-0 bg-cyan-500 p-1 rounded-full text-white">
            <i class="fas fa-edit"></i>
          </button>
        </div>
        <div class="text-center sm:text-left sm:ml-4 mt-4 sm:mt-0">
          <h2 class="text-2xl font-bold"><%= username %></h2>
          <p class="text-gray-400"><%= user.email %></p>
        </div>
      </div>

      <!-- Personal Details Form -->
      <form class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <label class="block text-gray-500 mb-1">Full Name</label>
          <input type="text" class="w-full px-3 py-2 bg-gray-800 text-white rounded-md" value="Mukesh Pathak">
        </div>
        <div>
          <label class="block text-gray-500 mb-1">Email</label>
          <input type="email" class="w-full px-3 py-2 bg-gray-800 text-white rounded-md" value="mukeshpathak345@gmail.com">
        </div>
        <div>
          <label class="block text-gray-500 mb-1">Contact Number</label>
          <input type="text" class="w-full px-3 py-2 bg-gray-800 text-white rounded-md" value="089649 41738">
        </div>
        <div>
          <label class="block text-gray-500 mb-1">Occupation</label>
          <select class="w-full px-3 py-2 bg-gray-800 text-white rounded-md">
            <option>Working Professional</option>
            <option>Student</option>
            <option>Freelancer</option>
          </select>
        </div>
        <div>
          <label class="block text-gray-500 mb-1">City</label>
          <input type="text" class="w-full px-3 py-2 bg-gray-800 text-white rounded-md" value="Bhopal">
        </div>
      </form>
    </div>

    <!-- Enrolled Courses Section -->
    <div id="courses" class="section hidden">
      <h2 class="text-2xl font-semibold mb-4">Enrolled Courses</h2>
      <ul class="space-y-4">
        <li class="bg-gray-800 p-4 rounded-md">
          <h3 class="text-lg font-semibold">Course Title 1</h3>
          <p class="text-gray-400">Description of the course or progress here.</p>
        </li>
        <li class="bg-gray-800 p-4 rounded-md">
          <h3 class="text-lg font-semibold">Course Title 2</h3>
          <p class="text-gray-400">Description of the course or progress here.</p>
        </li>
        <!-- Additional courses as needed -->
      </ul>
    </div>

    <!-- Logout Button -->
    <button class="mt-8 px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-500 w-full sm:w-auto"><a href="/logout">
      Logout </a> <i class="fas fa-sign-out-alt ml-2"></i>
    </button>
  </div>
</div>

<%- include('partials/footer') %>

<script>
  function showSection(section) {
    document.querySelectorAll('.section').forEach(el => el.classList.add('hidden'));
    document.getElementById(section).classList.remove('hidden');
  }
</script>

<style>
  .section.hidden { display: none; }
  .section.active { display: block; }
</style>
